/* component/zyslider.wxss */

.two-way-slider {
  /*height: 100%;*/
  width: 100%;
  height: 50rpx;
  position: relative;
}

.slider-body {
  height: 10rpx;
  background-color: #ddd;
  position: relative;
}

.body {
  bottom: 75rpx;
  background-color: #2db7f5;
  z-index: 0.3;
}

.left {
  bottom: 64rpx;
  z-index: 0.1;
}

.right {
  z-index: 0.2;
  bottom: 82rpx;
}

.slider-item {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  background-color: #2db7f5;
  z-index: 2;
}

.min {
  position: relative;
  top: 0rpx;
  /*left: 100rpx;*/
}

.max {
  position: relative;
  bottom: 40rpx;
  /*left: 600rpx;*/
}

